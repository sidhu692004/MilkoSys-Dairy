<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3C3A3A" /> <!-- Black background -->
            <corners android:radius="4dp" />  <!-- Rounded corners -->
            <stroke android:width="1dp" android:color="#444444" /> <!-- Dark grey border -->
        </shape>
    </item>

    <!-- Dropdown arrow icon (built-in, small size) -->
    <item android:gravity="right|center_vertical">
        <inset android:insetRight="8dp">
            <bitmap
                android:gravity="center"
                android:src="@android:drawable/arrow_down_float"
                android:width="15dp"
                android:height="12dp" />
        </inset>
    </item>

</layer-list>
